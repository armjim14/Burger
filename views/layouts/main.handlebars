<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Eat-A-Burger</title>
    <style>
        body {
            background-color: rgb(176, 236, 236)
        }
        #cont {
            width: 100%;
        }
        h1 {
            text-align: center;
            font-size: 30px;
        }
        #image {
            width: 250px;
            margin: auto;
            display: flex;
        }
        #text {
            width: 275px;
            margin: auto;
            display: flex;
        }
        #add {
            font-size: 20px;
            margin: auto;
            display: flex;
            margin-top: 13px;
            border-radius: 10%;
            background-color: lightcoral;
        }
        #left-side, #right-side {
            margin-top: 20px;
            float: left;
            justify-content: center;
            display: flex;
            width: 50%;
        }
    </style>
    <script
  src="https://code.jquery.com/jquery-3.4.1.js"
  integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
  crossorigin="anonymous"></script>
</head>
<body>
    <div id="cont">
        <img id="image" src="https://image.shutterstock.com/image-vector/hamburger-cartoon-vector-illustration-isolated-260nw-257426938.jpg" alt="Burger">
        <h1>Eat-A-Burger</h1>
        <input id="text">
        <button id="add" >Submit</button>
    </div>
    <hr>
        {{{body}}}

<script>

    $("#add").on("click", () => {

        var info = {input: $("#text").val()};
        console.log(info);
        if (!info){
            alert("please enter a item")
        } else {
            $.post("/api/food", info)
            .then((info) => {
                console.log(info);
                restartSite();
            })
        }

    })

    function restartSite() {
        window.location.href = "/"
    }

</script>
</body>
</html>